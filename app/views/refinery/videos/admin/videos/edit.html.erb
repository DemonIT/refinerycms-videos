<div class="edit_video">
  <div class="video_preview"><%= render 'show_video', :video => @video %></div>
  <%= form_for @video, :url => refinery.videos_admin_video_path,
               :html => {:method => 'put'},
               :as => 'video' do |f| %>
        <div class="video_form">

                <%= render '/refinery/admin/error_messages',
                           :object => @video,
                           :include_object_name => false %>

                <div class='field'>
                  <%= f.label :title, t('.video_title') %>
                  <%= f.text_field :title, :placeholder => t('video_title', scope: 'refinery.videos.admin.videos.edit'), :autoload => true, :require =>  'require' %>
                </div>
        </div>
      <%= render '/refinery/admin/form_actions', :f => f,
                 :continue_editing => false,
                 :hide_cancel => false,
                 :hide_delete => false ,
                 :delete_confirmation => t('message', :scope => 'refinery.videos.admin.videos.videos', :file_name => @video.get_title),
                 :delete_title => t('delete', :scope => 'refinery.videos.admin.videos.videos') ,
                 :submit_button_text => t('.update_data') %>

  <% end %>
</div>